<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    tools:context="buta_warna.imk.kelompok12.ArticleActivity">

            <Button
                android:id="@+id/pengertian"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="50dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="#D91E18"
                android:onClick="onClickPengertian"
                android:text="Pengertian" />

            <Button
                android:id="@+id/penyebab"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/white"
                android:background="#EE5A24"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pengertian"
                android:onClick="onClickPenyebab"
                android:text="Penyebab" />

            <Button
                android:id="@+id/jenis"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/white"
                android:background="#2ECC71"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/penyebab"
                android:onClick="onClickJenis"
                android:text="Jenis" />

            <Button
                android:id="@+id/pengobatan"
                android:textColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:background="#004D98"
                android:onClick="onClickPengobatan"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="5pt"
                android:layout_below="@+id/jenis"
                android:text="Rekomendasi Pekerjaan" />

            <fragment
                android:name="buta_warna.imk.kelompok12.FragmentPengertian"
                android:id="@+id/fragment_change"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/pengertian"
                android:layout_width="match_parent"
                android:layout_height="450dp"/>

</RelativeLayout>
