            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tes"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="12pt"/>

            <ImageView
                android:id="@+id/mImageTest"
                android:layout_width="@dimen/d250"
                android:layout_height="@dimen/d250"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ishihara_2"
                />

            <LinearLayout
                android:id="@+id/mLinearAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/d16">

                <EditText
                    android:id="@+id/mAnswer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d32"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textSize="@dimen/s32"/>

                <Button
                    android:layout_width="@dimen/d100"
                    android:layout_height="@dimen/d50"
                    android:background="@color/primary_light"
                    android:onClick="onClickAnswer"
                    android:text="@string/btnTextAnswer"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/s20"/>
            </LinearLayout>

        </LinearLayout>

